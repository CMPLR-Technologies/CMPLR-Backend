pipeline {
    agent {
        label "beta"
    }
    environment{
        LOGIN_SERVER = "beta"
        TAG = sh(returnStdout: true, script: "git tag --sort version:refname | tail -1").trim()
    }
    stages {
        stage("fetch"){
            steps{
                echo "========Executing Fetch========"
                git branch: "dev", url: "https://CMPLR-Technologies@dev.azure.com/CMPLR-Technologies/CMPLR-Technologies.Backend/_git/CMPLR-Technologies.Backend"
                sh"""
                echo $TAG
                """
            }
            post{
                success{
                    echo "=======fetch executed successfully========"
                    echo "==========Copy .env==========="
                    sh"""
                    cp ~/env/backend.env ./.env 
                    """
                }
                failure{
                    echo "========fetch execution failed========"
                    //slackSend (color:"#FF0000", message: "Failed to pull code-base from github")
                    
                 }
            }
        }
        stage('docker build') {
            steps {
                echo "========docker build ========"
                sh """
                    docker build -t $LOGIN_SERVER/backend:latest .
                """    
            }
            post {
                success {
                    echo "========docker build success ========"
                    //slackSend (color:"#00FF00",  message: "Master: Building Image success")
                }
                failure {
                    echo "========docker build failed========"
                    //slackSend (color:"#FF0000", message: "Master: Building Image failure")
                }
           }
        }
        

    }
}